<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.docmall.demo.mapper.CategoryMapper">
	
	<!-- 1차카테고리 -->
	<select id="categoryAllList" resultType="com.docmall.demo.domain.CategoryVO">
		SELECT 
			c_code, c_name, c_pcode 
		From
		 	category 
		WHERE 
			c_pcode IS NULL
	</select>

	
	<!-- 2차카테고리 -->
	<select id="subCategoryList" resultType="com.docmall.demo.domain.CategoryVO" parameterType="Integer">
		SELECT 
			c_code, c_name, c_pcode 
		From
		 	category 
		WHERE 
			c_pcode = #{c_pcode}
	</select>









</mapper>